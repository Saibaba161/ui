<!DOCTYPE html>
<html lang="en">

<head>
    <title>Webleb</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="../public/css/authentication.css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
   
</head>

<body>
    <div class="section">
        <div class="container">
            <div class="row full-height justify-content-center">
                <div class="col-12 text-center align-self-center py-5">
                    <div class="section pb-5 pt-5 pt-sm-2 text-center">
                        <!-- <div class="form-header"> -->
                        <h6 id="label-ls" class="mb-0 pb-3"><span>Log In </span><span>Sign Up</span></h6>
                        <input class="checkbox" type="checkbox" id="reg-log" name="reg-log" />
                        <label for="reg-log"></label>
                        <!-- </div> -->
                        <div class="card-3d-wrap mx-auto">
                            <!-- login form -->
                            <div class="card-3d-wrapper">
                                <div class="card-front">
                                    <div class="center-wrap">
                                        <form action="/login" method="post"> 
                                        <div class="section text-center">
                                            <h4 class="mb-4 pb-3">Log In</h4>
                                            <div class="form-group">
                                                <input name="email" type="email" class="form-style" placeholder="Email">
                                                <i class="input-icon uil uil-at"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <input name="password" type="password" class="form-style" placeholder="Password">
                                                <i class="input-icon uil uil-lock-alt"></i>
                                            </div>
                                            <div class="form-group mt-2">
                                                <select name="type" class="form-select form-style"
                                                    aria-label="Default select example">
                                                    <option selected>Select type of user</option>
                                                    <option value="1">Student</option>
                                                    <option value="2">Verify Team</option>
                                                    <option value="3">Industry</option>
                                                </select>
                                                <i class="input-icon uil-user"></i>
                                            </div>

                                           <button class="btn mt-4"  type="submit">submit</button>
                                            <p class="mb-0 mt-4 text-center"><a href="https://www.web-leb.com/code"
                                                    class="link">Forgot your password?</a></p>
                                        </div>
                                        </form>
                                    </div>
                                </div>

                                <!-- signup form -->
                                <div class="card-back" id="class-back">
                                    <div class="center-wrap">
                                        <div class="section text-center">
                                            <h4 class="mb-3 pb-3">Sign Up</h4>
                                            <div class="form-group mt-2">
                                                <select name="type" id="name" class="form-select form-style"
                                                    aria-label="Default select example">
                                                    <option selected>Select type of user</option>
                                                    <option value="sform">Student</option>
                                                    <option value="vform">Verify Team</option>
                                                    <option value="iform">Industry</option>
                                                </select>
                                                <i class="input-icon uil-user"></i>
                                            </div>
                                            <form action="/student/signup" method="post">
                                                <div class="data sform mt-2" id="sform">
                                                    <!-- Student fields -->
                                                    <!-- ... Your existing student fields ... -->
                                                    <div class="form-group mt-2">
                                                        <input name="fullName" type="text" class="form-style" placeholder="Full Name">
                                                        <i class="input-icon uil uil-user"></i>
                                                    </div>
                                                    
                                                    <div class="form-group mt-2">
                                                        <input name="collegeName" type="text" class="form-style" placeholder="College Name">
                                                        <i class="input-icon uil uil-user"></i>
                                                    </div>
                                                    
                                                    <div class="form-group mt-2">
                                                        <input name="registrationNumber" type="text" class="form-style" placeholder="Registration Number">
                                                        <i class="input-icon uil uil-user"></i>
                                                    </div>
                                                    
                                                <div class="form-group mt-2">
                                                    <select name="type" class="form-select form-style" aria-label="Default select example">
                                                        <option selected>Stream</option>
                                                        <option value="1">B.Tech</option>
                                                        <option value="2">Diploma </option>
                                                        <option value="3">ITI </option>
                                                    </select>
                                                    <i class="input-icon uil-user"></i>
                                                </div>
                                                    
                                                    <div class="form-group mt-2">
                                                        <select name="type" class="form-select form-style" aria-label="Default select example">
                                                            <option selected>Branch</option>
                                                            <option value="1">MECH</option>
                                                            <option value="2">CIVIL </option>
                                                            <option value="3">ECE</option>
                                                            <option value="4">EEE </option>
                                                            <option value="5">CSE</option>
                                                            <option value="6">CHE </option>
                                                        </select>
                                                        <i class="input-icon uil-user"></i>
                                                    </div>
                                                    <div class="form-group mt-2">
                                                        <input name="currentYear" type="number" class="form-style" placeholder="Current Year">
                                                        <i class="input-icon uil uil-at"></i>
                                                    </div>
                                                    <div class="form-group mt-2">
                                                        <input name="passedOutYear" type="number" class="form-style" placeholder="Passed out Year">
                                                        <i class="input-icon uil uil-at"></i>
                                                    </div>
                                                    
                                                    <div class="form-group mt-2">
                                                        <input name="email" type="email" class="form-style" placeholder="Email">
                                                        <i class="input-icon uil uil-at"></i>
                                                    </div>
                                                    
                                                    <div class="form-group mt-2">
                                                        <input name="password" type="password" class="form-style" placeholder="Password">
                                                        <i class="input-icon uil uil-lock-alt"></i>
                                                    </div>
                                                    
                                                    <div class="form-group mt-2">
                                                        <input type="tel" class="form-style" placeholder="Phone Number">
                                                        <i class="input-icon uil uil-phone-alt"></i>
                                                    </div>
                                                </div>
                                            </form>
                                            <form action="/industry/signup" method="post">
                                            <div class="data vform mt-2" id="vform">
                                                <!-- Verify Team fields -->
                                                <!-- ... Your existing verify team fields ... -->
                                                <div class="form-group mt-2">
                                                    <input name="fullName" type="text" class="form-style" placeholder="Full Name">
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                
                                                <div class="form-group mt-2">
                                                    <input name="industryName" type="text" class="form-style" placeholder="Industry Name">
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                
                                                <div class="form-group mt-2">
                                                    <input name="employeeNumber" type="text" class="form-style" placeholder="Employee Number">
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                
                                                <div class="form-group mt-2">
                                                    <input name="role" type="text" class="form-style" placeholder="Role in the company">
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                
                                                <div class="form-group mt-2">
                                                    <input name="estdYear" type="number" class="form-style" placeholder="Established Year">
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    <input name="numberOfEmployees" type="number" class="form-style" placeholder="No. of Skilled employees in company">
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    <input name="siteLink" type="text" class="form-style" placeholder="Official site link">
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                
                                                <div class="form-group mt-2">
                                                    <input name="email" type="email" class="form-style" placeholder=" Official Mail id">
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>
                                                
                                                
                                                
                                                <div class="form-group mt-2">
                                                    <input name="officialNumber" type="tel" class="form-style" placeholder="official Phone Number">
                                                    <i class="input-icon uil uil-phone-alt"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    <input name="personalNumber" type="tel" class="form-style" placeholder="Personal Phone Number">
                                                    <i class="input-icon uil uil-phone-alt"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    <input type="password" class="form-style" placeholder="Password">
                                                    <i class="input-icon uil uil-lock-alt"></i>
                                                </div>

                                            </div>
                                            </form>
                                            <form>
                                            <div class="data iform mt-2" id="iform">
                                                <!-- Industry fields -->
                                                <!-- ... Your existing industry fields ... -->
                                                <div class="form-group mt-2">
                                                    <input type="text" class="form-style" placeholder="Full Name">
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                
                                                <div class="form-group mt-2">
                                                    <input type="text" class="form-style" placeholder="Industry Name">
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                
                                                <div class="form-group mt-2">
                                                    <input type="text" class="form-style" placeholder="Employee Number">
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                
                                                <div class="form-group mt-2">
                                                    <input type="text" class="form-style" placeholder="Employee Role">
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                
                                                <div class="form-group mt-2">
                                                    <input type="text" class="form-style" placeholder="Established Year">
                                                    <i class="input-icon uil uil-user"></i>
                                                </div>
                                                
                                                <div class="form-group mt-2">
                                                    <input type="email" class="form-style" placeholder="Email">
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>
                                                
                                                <div class="form-group mt-2">
                                                    <input type="password" class="form-style" placeholder="Password">
                                                    <i class="input-icon uil uil-lock-alt"></i>
                                                </div>
                                                
                                                <div class="form-group mt-2">
                                                    <input type="password" class="form-style" placeholder="Phone Number">
                                                    <i class="input-icon uil uil-phone-alt"></i>
                                                </div>
                                            </div>
                                            <a href="https://www.web-leb.com/code" class="btn mt-4">Register</a>
                                        </div>
                                    </div>
                                </div>

                                <!-- signup form end -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script>
        var login = true;
        $(document).ready(function () {
            $("#reg-log").on('change', function () {
                if(login){
                    $('.card-back').show();
                    $('.card-front').hide();
                    $('#label-ls').hide()
                    $('label').hide();
                    $('.chechbox').hide()
                    login = false;
                }else{
                    $('.card-back').hide();
                    $('.card-front').show();
                    $('#label-ls').show();
                    
                    login = true;
                }
            });

            $("#name").on('change', function () {
                $(".data").hide();
                $("#" + $(this).val()).fadeIn(500);
            }).change();
        });
    </script>

</body>

</html>