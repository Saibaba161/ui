<body data-aos-easing="ease-in-out" data-aos-duration="1000" data-aos-delay="0">

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between">

            <a href="/" class="logo d-flex align-items-center me-auto me-lg-0">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <img src="../public/img/ui.png" alt="">
                <!-- <h1>Yummy<span>.</span></h1> -->
            </a>

            <nav id="navbar" class="navbar">
                <ul>


                    <li><a href="/blogs/ours">All blogs</a></li>
                    <li><a href="/blogs/yours">Published</a></li>
                    <li><a href="/blogs/compose">Compose</a></li>
                    <li><a href="/profile">Profile</a></li>


                </ul>
            </nav><!-- .navbar -->

            <!-- create a user icon with to dredirect profile informatin-->

            <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
            <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>

        </div>
    </header>
    <!-- End Header -->
    
    <div class="container mt-5">
        <div class="row">
            <% posts.forEach(post=>{  %>
            <div class="col-md-4">
                <div class="blog-post">
                    <img src="/public/uploads/<%= post.image %>" alt="Blog Post 1" class="img-fluid">
                    <h2 class="mt-2"><%= post.title %></h2>
                    <p><%= post.content.substring(0,100)+"..." %></p>
                    <a href="/blogs/posts/<%= post._id %>" class="btn btn-primary">Read More</a>
                </div>
            </div>
            <% }); %>

        </div>
    </div>
<!-- End #main -->


