<%- include("partials/header"); -%>

    <h1>Home</h1>
    <p>
        <%= startingContent %>
    </p>

    <% posts.forEach(post=> { %>
        <h1>
            <%= post.title %>
            <img src= "/public/uploads/<%= post.image %>"  alt="Thumbnail" width="400px" height="200px" >
        </h1>
        <p>
            <%= post.content.substring(0,100)+"..." %>
                <a href="/blogs/posts/<%= post._id %>" class="stretched-link">Read More</a>
        </p>
        <% }); %>

